    <!-- Script - PopUp Recruitmenter For Edit Short Details -->
    <script type="text/javascript">
        $(function () {
            $(".popUpEdit").click(function () {

                var id = $(this).closest("tr").find("td").eq(1).find("p").eq(1).html();
                //window.alert(id + '--');
                $.ajax({
                    type: "Get",
                    url: "/HRPool/Edit/" + id,

                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {

                       
                        $("#EditAllDetailsModal").find(".modal-dialog").attr("style", "max-width:500px;");
                        $("#EditAllDetailsModal").find(".modal-title").text("بيانات المرشح");
                        $("#EditAllDetailsModal").find(".modal-body").html(response);
                        $("#EditAllDetailsModal").modal('show');
                    }
                });
            });
        });
    </script>

